@inject IJSRuntime _jsRunTime
@inject NavigationManager _navigationManager

<dialog id="result-dialog">
    <div class="dialog-content">
        @ChildContent
        <br>
        <button @onclick="HideModalAsync" class="btn btn-filled btn-auto">
            Registrar Imc
        </button>
    </div>
</dialog>


@code {
    [EditorRequired]
    [Parameter]
    public RenderFragment ChildContent { get; set; } = null!;

    [Parameter]
    public EventCallback<MouseEventArgs> OnModalCloseCallback { get; set; }

    public async Task ShowModalAsync()
    {
        await _jsRunTime.InvokeVoidAsync("showModal", "result-dialog");
        StateHasChanged();
    }

    public async Task HideModalAsync()
    {
        await _jsRunTime.InvokeVoidAsync("hideModal", "result-dialog");
        StateHasChanged(); //Notifica os componentes para renderizar novamente
        _navigationManager.NavigateTo("#history");
        await OnModalCloseCallback.InvokeAsync();
    }
}